<div class="table-responsive">
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Birth year</th>
    <th>Eye color</th>
    <th>Gender</th>
    <th>Hair color</th>
    <th>Height</th>
    <th>Mass</th>
    <th>Skin color</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td>
          <% if person.birth_year.blank? %>
            <%= 'unknown' %>
          <% else %>
              <% if person.birth_year < 0 %>
                <% person.birth_year = -1 * (person.birth_year + 1)%>
                <%= person.birth_year.to_s + 'BBY' %>
              <% else %>
                <%= person.birth_year.to_s + 'ABY' %>
              <% end %>
          <% end %>
        </td>
        <td><%= person.eye_color %></td>
        <td><%= person.gender %></td>
        <td><%= person.hair_color %></td>
        <td><%= person.height.blank? ? 'unknown' : person.height %></td>
        <td><%= person.mass.blank? ? 'unknown' : person.mass %></td>
        <td><%= person.skin_color %></td>
        <td><%= link_to 'Show', person %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>